@{   
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!-- seção javascript do head -->
@section javascript{
    <script src="~/js/_produto-cadastro.js"></script>     
}

<h4>Cadastro de Produtos</h4>
<a href="/Home/Index">Voltar</a> para a página inicial.
<hr/>

<div class="row">
    <div class="col-md-4">

        <label>Nome do Produto:</label>
        <input type="text" id="nome" class="form-control"
               placeholder="Digite aqui"/>
        <br/>

        <label>Preço:</label>
        <input type="text" id="preco" class="form-control"
               placeholder="Digite aqui" />
        <br />

        <label>Quantidade:</label>
        <input type="number" id="quantidade" class="form-control"/>
        <br />

        <label>Selecione a Categoria:</label>
        <select id="categoria" class="form-control">
            <option value="">- Selecione uma Opção -</option>
            <option value="1">Informática</option>
            <option value="2">Eletrônicos</option>
            <option value="3">Games</option>
            <option value="4">Outros</option>
        </select>
        <br/>

        <button id="botaocadastro" class="btn btn-success">
            Cadastrar Produto
        </button>
        <br/>
        <br/>

        <span id="mensagem"></span>

    </div>
</div>