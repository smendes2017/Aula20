<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>COTI Informatica</title>

    <!-- Folhas de estilo CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap-theme.min.css" rel="stylesheet" />

    <!-- Arquivos javascript -->
    <script src="~/js/jquery-3.1.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

    <!-- seção para inserir conteudo javascript.. -->
    @RenderSection("javascript", required : false)

    <style>
        .loader{
            position: fixed;
            left: 0px;
            top: 0px;
            width: 100%;
            height: 100%;
            z-index: 9999;
            background: url('/img/ajax-loader.gif') 50% 50% no-repeat rgba(249,249,249, .5);
        }
    </style>

    <script type="text/javascript">

        //função executada quando a página inicia um evento ajax..
        $(document).ajaxStart(function () {
            $("#painelajax").css("display", "block");
        });

        //função executada quando a página termina um evento ajax..
        $(document).ajaxStop(function () {
            $("#painelajax").css("display", "none");
        });

    </script>

</head>
<body class="container">
    
    <h2>Projeto Controle de Produtos</h2>
    Asp.Net MVC, EntityFramework e Ajax (JQuery)
    <hr/>

    @RenderBody()

    <div id="painelajax" class="loader" style="display: none;"></div>

</body>
</html>
